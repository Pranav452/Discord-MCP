{
  "mcpServers": {
    "discord-mcp-server": {
      "command": "python",
      "args": ["main.py"],
      "env": {
        "DISCORD_BOT_TOKEN": "your_discord_bot_token_here",
        "API_KEYS": "key1,key2,key3",
        "ADMIN_API_KEY": "admin_key_here",
        "MCP_SERVER_NAME": "discord-mcp-server",
        "MCP_SERVER_VERSION": "1.0.0",
        "LOG_LEVEL": "INFO",
        "AUDIT_LOG_FILE": "logs.md",
        "ENVIRONMENT": "development",
        "DEBUG": "true"
      }
    }
  }
} 